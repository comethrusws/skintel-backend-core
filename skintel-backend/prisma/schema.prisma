generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model AnonymousSession {
  id                String             @id @default(cuid())
  sessionId         String             @unique @map("session_id")
  sessionToken      String             @unique @map("session_token")
  deviceId          String             @map("device_id")
  deviceInfo        Json               @map("device_info")
  createdAt         DateTime           @default(now()) @map("created_at")
  expiresAt         DateTime           @map("expires_at")
  mergedToUserId    String?            @map("merged_to_user_id")
  answers           OnboardingAnswer[]
  onboardingSession OnboardingSession?

  @@map("anonymous_sessions")
}

model User {
  id                      String                  @id @default(cuid())
  userId                  String                  @unique @map("user_id")
  name                    String?
  phoneNumber             String?                 @map("phone_number")
  dateOfBirth             DateTime?               @map("date_of_birth")
  email                   String?                 @unique
  passwordHash            String?                 @map("password_hash")
  ssoProvider             String?                 @map("sso_provider")
  ssoId                   String?                 @map("sso_id")
  latitude                Float?                  @map("latitude")
  longitude               Float?                  @map("longitude")
  locationUpdatedAt       DateTime?               @map("location_updated_at")
  planType                PlanType                @default(MONTHLY) @map("plan_type")
  originalTransactionId   String?                 @map("original_transaction_id")
  subscriptionExpiresAt   DateTime?               @map("subscription_expires_at")
  isActive                Boolean                 @default(false) @map("is_active")
  createdAt               DateTime                @default(now()) @map("created_at")
  updatedAt               DateTime                @updatedAt @map("updated_at")
  refreshTokens           RefreshToken[]
  answers                 OnboardingAnswer[]
  onboardingSession       OnboardingSession?
  facialLandmarks         FacialLandmarks[]
  products                Product[]
  passwordResetTokens     PasswordResetToken[]
  Task                    Task[]
  TaskCompletion          TaskCompletion[]
  skinFeels               SkinFeel[]
  notificationPreferences NotificationPreference?
  deviceTokens            DeviceToken[]
  waterIntakeLogs         WaterIntakeLog[]

  @@unique([ssoProvider, ssoId])
  @@map("users")
}

model NotificationPreference {
  id                        String   @id @default(cuid())
  userId                    String   @unique @map("user_id")
  dailyRoutineReminders     Boolean  @default(false) @map("daily_routine_reminders")
  hydrationAlerts           Boolean  @default(true) @map("hydration_alerts")
  uvIndexAlerts             Boolean  @default(false) @map("uv_index_alerts")
  tipOfTheDay               Boolean  @default(false) @map("tip_of_the_day")
  questionsOfTheDay         Boolean  @default(true) @map("questions_of_the_day")
  smartInsights             Boolean  @default(false) @map("smart_insights")
  ingredientRecommendations Boolean  @default(true) @map("ingredient_recommendations")
  notificationSound         Boolean  @default(true) @map("notification_sound")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("notification_preferences")
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  platform  String   @default("unknown") // android, ios, web
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("device_tokens")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  @@map("refresh_tokens")
}

model OnboardingAnswer {
  id         String       @id @default(cuid())
  answerId   String       @unique @map("answer_id")
  sessionId  String?      @map("session_id")
  userId     String?      @map("user_id")
  screenId   String       @map("screen_id")
  questionId String       @map("question_id")
  type       AnswerType
  value      Json
  status     AnswerStatus
  savedAt    DateTime     @default(now()) @map("saved_at")

  session         AnonymousSession? @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  user            User?             @relation(fields: [userId], references: [userId], onDelete: Cascade)
  FacialLandmarks FacialLandmarks?

  @@map("onboarding_answers")
}

model OnboardingSession {
  id         String   @id @default(cuid())
  sessionId  String?  @map("session_id")
  userId     String?  @map("user_id")
  allAnswers Json     @map("all_answers") // Combined JSON of all answers
  status     String   @default("in_progress") // in_progress, completed, skipped
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  session AnonymousSession? @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  user    User?             @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([sessionId])
  @@unique([userId])
  @@map("onboarding_sessions")
}

model IdempotencyKey {
  id        String   @id @default(cuid())
  key       String   @unique
  response  Json
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  @@map("idempotency_keys")
}

model FacialLandmarks {
  id                    String         @id @default(cuid())
  answerId              String         @unique @map("answer_id")
  userId                String?        @map("user_id")
  landmarks             Json
  analysis              Json?
  progressUpdate        Json?          @map("progress_update")
  status                LandmarkStatus @default(PROCESSING)
  processedAt           DateTime?      @map("processed_at")
  error                 String?
  createdAt             DateTime       @default(now()) @map("created_at")
  score                 Int?
  weeklyPlan            Json?
  analysisType          AnalysisType?
  planStartDate         DateTime?
  planEndDate           DateTime?
  waterIntakeSuggestion Json?          @map("water_intake_suggestion")
  annotatedImageUrl     String?        @map("annotated_image_url")

  answer OnboardingAnswer @relation(fields: [answerId], references: [answerId], onDelete: Cascade)
  user   User?            @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("facial_landmarks")
}

model WaterIntakeLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  date      DateTime @map("date")
  amountMl  Int      @map("amount_ml")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, date])
  @@map("water_intake_logs")
}

model Product {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  imageUrl    String   @map("image_url")
  productData Json     @map("product_data")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("products")
}

model PasswordResetToken {
  token     String   @id
  userId    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model Task {
  id                  String   @id @default(cuid())
  userId              String
  week                Int // 1-4
  title               String
  description         String
  timeOfDay           String // 'morning' | 'evening' | 'anytime'
  category            String // 'cleansing' | 'treatment' | 'moisturizing' | 'protection' | 'lifestyle'
  priority            String // 'critical' | 'important' | 'optional'
  recommendedProducts Json? // array of product categories
  userProducts        Json? // array of user product IDs
  adaptations         Json? // adaptation metadata
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user        User             @relation(fields: [userId], references: [userId], onDelete: Cascade)
  completions TaskCompletion[]

  @@index([userId, week])
  @@index([userId, isActive])
  @@index([userId, priority])
}

model TaskCompletion {
  id          String   @id @default(cuid())
  taskId      String
  userId      String
  completedAt DateTime
  timestamp   DateTime @default(now()) // exact time when marked complete

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([taskId, userId, completedAt]) // prevent duplicate completions per day
  @@index([userId, completedAt])
}

enum AnswerType {
  single
  multi
  slider
  image
  boolean
  derived
}

enum AnswerStatus {
  answered
  skipped
}

enum LandmarkStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum AnalysisType {
  INITIAL
  PROGRESS
}

enum PlanType {
  WEEKLY
  MONTHLY
}

model SkinTip {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date // Store date only
  content   String
  category  String? // Optional category (e.g., "Hydration", "Sun Protection")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("skin_tips")
}

model QuestionOfTheDay {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date // Store date only
  question  String
  options   Json? // Optional array of strings for multiple choice
  category  String? // Optional category
  createdAt DateTime @default(now()) @map("created_at")

  @@map("questions_of_the_day")
}

model SkinFeel {
  id        String        @id @default(cuid())
  userId    String        @map("user_id")
  value     SkinFeelValue
  createdAt DateTime      @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("skin_feels")
}

enum SkinFeelValue {
  feeling_rough
  not_great
  feeling_good
  feeling_fresh
  glowing
}
