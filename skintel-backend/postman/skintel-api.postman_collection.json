{
  "info": {
    "name": "Skintel Backend API",
    "description": "Complete API collection for Skintel backend",
    "schema": "v2.1.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Anonymous Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('session_id', response.session_id);",
                  "    pm.environment.set('session_token', response.session_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": \"{{$guid}}\",\n  \"device_info\": {\n    \"os\": \"ios\",\n    \"os_version\": \"17.4\",\n    \"app_version\": \"1.0.0\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/sessions/anonymous",
              "host": ["{{base_url}}"],
              "path": ["v1", "sessions", "anonymous"]
            }
          }
        }
      ]
    },
    {
      "name": "Onboarding",
      "item": [
        {
          "name": "Save Onboarding Answers",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Session-Token",
                "value": "{{session_token}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{$guid}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"answers\": [\n    {\n      \"answer_id\": \"{{$guid}}\",\n      \"screen_id\": \"screen_skin_type\",\n      \"question_id\": \"q_skin_type\",\n      \"type\": \"single\",\n      \"value\": \"combination\",\n      \"status\": \"answered\",\n      \"saved_at\": \"{{$isoTimestamp}}\"\n    }\n  ],\n  \"screen_completed\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/onboarding",
              "host": ["{{base_url}}"],
              "path": ["v1", "onboarding"]
            }
          }
        },
        {
          "name": "Get Onboarding State",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Session-Token",
                "value": "{{session_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/onboarding?session_id={{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "onboarding"],
              "query": [
                {
                  "key": "session_id",
                  "value": "{{session_id}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    pm.environment.set('refresh_token', response.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"email\": \"test-{{$timestamp}}@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "signup"]
            }
          }
        },
        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    pm.environment.set('refresh_token', response.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"email\": \"your-email@example.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    pm.environment.set('refresh_token', response.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/auth/token/refresh",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "token", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["v1", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Base64 Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"imageBase64\": \"data:image/jpeg;base64,/9j/4AAQSkZJRgABAQEAYABgAAD//gA7Q1JFQVR...\",\n  \"prefix\": \"test\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/upload",
              "host": ["{{base_url}}"],
              "path": ["v1", "upload"]
            }
          }
        }
      ]
    },
    {
      "name": "Analysis",
      "item": [
        {
          "name": "Analyze Skin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image_url\": \"https://example.com/face.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/vanalyse",
              "host": ["{{base_url}}"],
              "path": ["v1", "vanalyse"]
            }
          }
        }
      ]
    }
  ]
}
